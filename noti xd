local notification = {}
notification.new = function(ntype, body, duration)
	if string.lower(ntype) == "info" then
		local template = info:Clone()
		template.Parent = ScrollingFrame
		template.Visible = true
		template.body.Text = body
		tween(template, 0.15, "BackgroundTransparency", 0)
		for i, v in pairs(template:GetChildren()) do
			if v:IsA("TextLabel") then
				tween(v, 0.15, "TextTransparency", 0)
				tween(v, 0.15, "TextStrokeTransparency", 0)	
			end
			if v:IsA("UIStroke") then
				tween(v, 0.15, "Transparency", 0)
			end
		end

		delay(duration, function()
			tween(template, 0.15, "BackgroundTransparency", 1)
			for i, v in pairs(template:GetChildren()) do
				if v:IsA("TextLabel") then
					tween(v, 0.15, "TextTransparency", 1)
					tween(v, 0.15, "TextStrokeTransparency", 1)	
				end
				if v:IsA("UIStroke") then
					tween(v, 0.15, "Transparency", 1)
				end
			end
			delay(0.15, function()
				template:Destroy()
			end)
		end)

	elseif string.lower(ntype) == "warning" then
		local template = warning:Clone()
		template.Parent = ScrollingFrame
		template.Visible = true
		template.body.Text = body
		tween(template, 0.15, "BackgroundTransparency", 0)
		for i, v in pairs(template:GetChildren()) do
			if v:IsA("TextLabel") then
				tween(v, 0.15, "TextTransparency", 0)
				tween(v, 0.15, "TextStrokeTransparency", 0)	
			end
			if v:IsA("UIStroke") then
				tween(v, 0.15, "Transparency", 0)
			end
		end

		delay(duration, function()
			tween(template, 0.15, "BackgroundTransparency", 1)
			for i, v in pairs(template:GetChildren()) do
				if v:IsA("TextLabel") then
					tween(v, 0.15, "TextTransparency", 1)
					tween(v, 0.15, "TextStrokeTransparency", 1)	
				end
				if v:IsA("UIStroke") then
					tween(v, 0.15, "Transparency", 1)
				end
			end
			delay(0.15, function()
				template:Destroy()
			end)
		end)
	end
end

return notification
